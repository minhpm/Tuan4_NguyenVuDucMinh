@model IEnumerable<Tuan4_NguyenVuDucMinh.Models.Giohang>

@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ĐẶT HÀNG</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.masach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tensach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.giaban)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iSoluong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dThanhtien)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.masach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tensach)
            </td>
            <td>
                <img src="@item.hinh" width="50" height="90" alt="hinh thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.giaban)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iSoluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dThanhtien)
            </td>
        </tr>
    }
    @{
        ViewBag.Title = "XacnhanDonhang";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    
    <p>
        @Html.ActionLink("Về trang chủ", "Index", "Home")
    </p>
</table>
@using Tuan4_NguyenVuDucMinh.Models;
@{
    KhachHang kh = (KhachHang)Session["TaiKhoan"];
}
<table>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr>
            <td>Họ tên khách hàng:  </td>
            <td>@kh.hoten</td>
        </tr>
        <tr>
            <td>Địa chỉ: </td>
            <td>@kh.diachi</td>
        </tr>       
        <tr>
            <td>Điện thoại: </td>
            <td>@kh.dienthoai</td>
        </tr>
        <tr>
            <td>Ngày đặt: </td>
            <td>@DateTime.Now.ToLongDateString()</td>
        </tr>
        <tr>
            <td>Ngày giao hàng: </td>
            <td><input type="date" name="NgayGiao" /></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Đồng ý đặt hàng" /></td>           
        </tr>
    }
</table>

